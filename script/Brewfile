cask 'osxfuse'
cask 'postman'
cask 'quadrosync'
cask 'slack'
cask 'spectacle'
cask 'steam'
cask 'sublime-text'
cask 'tunnelblick'
cask 'veracrypt'
cask 'vlc'

# UT
cask 'xquartz'
