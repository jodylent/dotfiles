tap 'caskroom/cask'
tap 'rockymadden/rockymadden'  # for slack-cli

# Packages
brew 'awscli'
brew 'git'
brew 'jq'
brew 'mas'
brew 'openssl'
brew 'python2'
brew 'python3'
brew 'shellcheck'
brew 'slack-cli'
brew 'tree'
brew 'wget'

